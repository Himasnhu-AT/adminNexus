{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": true
    },
    "prepublishOnly": {
      "dependsOn": ["^prepublishOnly"],
      "cache": false
    },
    "local-link": {
      "dependsOn": ["^local-link"],
      "cache": false
    },
    "local-unlink": {
      "dependsOn": ["^local-unlink"],
      "cache": false
    },
    "npm-publish": {
      "dependsOn": ["^npm-publish"],
      "cache": false
    }
  }
}
